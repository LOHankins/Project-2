<%= form_for([@event, @eventactivity]) do |f| %>

  <% if @eventactivity.errors.any? %>
    <div id="error_explanation">
      <ul>
        <h2>errors:</h2>
        <% @eventactivity.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end  %>
  <span class="newactivity">
  <%= f.label :"title" %>
  <%= f.text_field :title %>
  </span>

  <span class="newactivity">
  <%= f.label :"description" %>
  <%= f.text_field :description %>
  </span>

  <span class="newactivity">
  <%= f.label :"start time" %>
  <%= f.text_field :start_time %>
  </span>

  <span class="newactivity">
  <%= f.label :"end time" %>
  <%= f.text_field :end_time %>
  </span>

  <span class="newactivity">
  <%= f.label :"city" %>
  <%= f.text_field :city %>
  </span>

  <span class="newactivity">
  <%= f.label :state %>
  <%= f.text_field :state %>
  </span>

  <span class="newactivity">
  <%= f.submit %>
  </span>

<% end %>