<%= form_for @event do |f| %>

  <% if @event.errors.any? %>
    <div id="error_explanation">
      <ul>
        <h2>errors:</h2>
        <% @event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end  %>

  <%= f.label :"title" %>
  <%= f.text_field :title %>

  <%= f.label :"start date" %>
  <%= f.text_field :start_date %>

  <%= f.label :"end date" %>
  <%= f.text_field :end_date %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :state %>
  <%= f.text_field :state %>
  
  <%= f.label :"cost" %>
  <%= f.text_field :cost %>

  <%= f.label :"notes" %>
  <%= f.text_field :notes %>

  <%= f.submit %>

<% end %>